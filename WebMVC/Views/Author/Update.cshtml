@model Entities.Dtos.AuthorDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Update Author</h2>
<form method="post" asp-action="Update">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Update Author</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="AuthorId" value="@Model.AuthorId" type="hidden"/>
        <div class="row mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" value="@Model.LastName"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" value="@Model.Phone"/>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" class="form-control" value="@Model.EmailAddress"/>
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" value="@Model.Address"/>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" value="@Model.City"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control" value="@Model.State"/>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Zip"></label>
            <input asp-for="Zip" class="form-control" value="@Model.Zip"/>
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
        


        <button class="btn btn-primary" type="submit">Update</button>


    </div>
    <a asp-action="Index" asp-controller="Author">Back to list</a>
</form>

