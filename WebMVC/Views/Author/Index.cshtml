@model List<Entities.Dtos.AuthorDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Author List</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            AuthorId
        </th>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            City
        </th>
        <th>
            
        </th>
        


    </tr>
    </thead>

    <tbody>
    <tr>
        <form method="post" asp-action="Index">
            <td> <input name="authorId" class="form-control" value="@ViewBag.AuthorId"/> </td>
            <td> <input name="firstName" class="form-control" value="@ViewBag.FirstName"/> </td>
            <td> <input name="lastName" class="form-control" value="@ViewBag.LastName"/> </td>
            <td> <input name="city" class="form-control" value="@ViewBag.City"/> </td>
            <td> <input type="submit" value="Search" /></td>
        </form>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>

            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.AuthorId })
            </td>

        </tr>
    }
    </tbody>
</table>
