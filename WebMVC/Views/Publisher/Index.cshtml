@model List<Entities.Dtos.PublisherDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Publisher List</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            PubId
        </th>
        <th>
            Publisher Name
        </th>
        <th>
            City
        </th>
        <th>
            
        </th>
        


    </tr>
    </thead>

    <tbody>
    <tr>
        <form method="post" asp-action="Index">
            <td> <input name="pubId" class="form-control" value="@ViewBag.PubId"/> </td>
            <td> <input name="publisherName" class="form-control" value="@ViewBag.PublisherName"/> </td>
            <td> <input name="city" class="form-control" value="@ViewBag.City"/> </td>
            <td> <input type="submit" class="btn-secondary" value="Search" /></td>
        </form>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PubId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>

            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.PubId })
            </td>

        </tr>
    }
    </tbody>
</table>
